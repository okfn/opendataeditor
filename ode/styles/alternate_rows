from PySide6.QtWidgets import QStyledItemDelegate
from PySide6.QtGui import QBrush, QColor


class AlternatingRowsDelegate(QStyledItemDelegate):
    """
    Class that defines the appearance of the rows of a QTableView
    alternating the background color of the rows.
    """

    def initStyleOption(self, option, index):
        super().initStyleOption(option, index)
        if index.row() % 2 == 0:
            option.backgroundBrush = QBrush(QColor("#f2f2f2"))
        else:
            option.backgroundBrush = QBrush(QColor("#ffffff"))
